/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run simozhou/epi-awesome -profile test
 */

params {
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
  // TODO nf-core: Give any required params for the test so that command line flags are not needed
  singleEnd = false
  readsPath = [
    ['Testdata', ['https://github.com/nf-core/test-datasets/raw/exoseq/testdata/Testdata_R1.tiny.fastq.gz', 'https://github.com/nf-core/test-datasets/raw/exoseq/testdata/Testdata_R2.tiny.fastq.gz']],
    ['SRR389222', ['https://github.com/nf-core/test-datasets/raw/methylseq/testdata/SRR389222_sub1.fastq.gz', 'https://github.com/nf-core/test-datasets/raw/methylseq/testdata/SRR389222_sub2.fastq.gz']],
    // ['Prova_chip', ['https://github.com/simozhou/epi-awesome/blob/master/test_data/ChIP_test_treat_R1.fastq', https://github.com/simozhou/epi-awesome/blob/master/test_data/ChIP_test_contr_R1.fastq]]
    ]
  fasta='https://github.com/simozhou/epi-awesome/blob/master/test_data/chr10.fasta.gz'
  macsConfig='https://github.com/simozhou/epi-awesome/blob/master/test_data/macs2.config'
}
